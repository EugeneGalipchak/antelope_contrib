# css3.0 extension

# Include css3.0  # uncomment to complete schema

Attribute commtype
	String (50)
	Format ( "%50s" )
	Null ( "-" )
	Description ( "communications used" )
	Detail {
		This is a textual description that descibes the communication
		specifications like VSAT, CDMA, regular_internet, DSL, etc.
	}
	;

Attribute provider
	String (15)
	Format ( "%-15s" )
	Null ( "-" )
	Description ( "communications provider used" )
	Detail {
		This is a textual description that descibes the vendor providing
		comms.  For example: Hughes, ATT, Verizon, SBC, Wild Blue, etc.
	}
	;

Relation comm
	Fields ( sta time endtime commtype provider lddate )
	Primary ( sta time::endtime )
	Description ( "Table for USArray station commmunications" )
	Detail {
                Table designed to handle detail in station communications including:

                   commtype: string field that would allow specifications like VSAT, CDMA, regular_internet, DSL, etc.
                   provider: string field allowing specifications like: Hughes, Verizon, ATT, Wild Blue, Univ. of Somewhere, etc.
                   power:  string describing power source for communication:  AC, solar, duty cycle, batteries, etc.
                   equiptype:  string describing equipment used for communications:  Raven X, Cellular C3211, satellite modem, etc.

                This is a contributed schema extension developed for use at the ANF, UCSD.
	}
	;

