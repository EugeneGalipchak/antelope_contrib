
STOCKDLIB= _stock.so
DLIB=python_stock$(DSUFFIX)

DATADIR= python/antelope

DATA= $(STOCKDLIB) stock.py

MAN3P= pythonstock.3p

CLEAN= *.pyc *.so

cflags= -I$(PYTHONINCLUDE)
fflags=
ldflags= 
ldlibs= $(TRLIBS)

include $(ANTELOPEMAKE)
include $(ANTELOPEMAKE).local

STOCKOBJS= _stock.o

$(STOCKDLIB) : $(STOCKOBJS)
	$(RM) $@
	$(DLD) $(DLDFLAGS) -o $(STOCKDLIB) $(STOCKOBJS) $(DLDLIBS) 

$(DLIB): $(STOCKDLIB)
	$(RM) $@
	@cp $(STOCKDLIB) $(DLIB)
