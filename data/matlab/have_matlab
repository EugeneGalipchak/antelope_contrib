: # use perl
eval 'exec perl -S $0 "$@"'
if 0;

foreach ( split(':', $ENV{PATH}) ) { 
    if ( -x "$_/mex" ) { 
	$result = `echo quit | $_/matlab -nodisplay -nojvm` ; 
	if ( $result =~ /Version/ ) { 
	    exit 0 
	} else { 
	    print STDERR "Problem: Matlab present but not executable!\n" ; 
	}
    }
}
exit 1
