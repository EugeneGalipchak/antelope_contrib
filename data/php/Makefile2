DSDLIB = Datascope.so
SIDLIB = sysinfo.so

DATADIR= php

DATA= $(DSDLIB) $(SIDLIB)

MAN3H= datascope_php.3h sysinfo_php.3h

CLEAN= $(DSDLIB) $(SIDLIB)

cflags= -I$(PHP_INC) -I$(PHP_INC)/main -I$(PHP_INC)/Zend -I$(PHP_INC)/TSRM \
	-DHAVE_CONFIG_H -DPHP_ATOM_INC
ldlibs= $(STOCKLIBS) $(TRLIBS) -ldbxml -lpfxml

include $(ANTELOPEMAKE)
DBG=

DSOBJS= Datascope.o
$(DSDLIB) : $(DSOBJS)
	$(RM) $@
	$(DLD) $(DLDFLAGS) -o $(DSDLIB) $(LORDER) $(DSOBJS) $(TSORT) $(DLDLIBS) 

SIOBJS= sysinfo.o
$(SIDLIB) : $(SIOBJS)
	$(RM) $@
	$(DLD) $(DLDFLAGS) -o $(SIDLIB) $(LORDER) $(SIOBJS) $(TSORT) $(DLDLIBS) 
